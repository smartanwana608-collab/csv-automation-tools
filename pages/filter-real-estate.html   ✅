  <!-- UPLOAD -->
  <div class="card">
    <h2>Upload CSV File</h2>
    <div class="upload-box">
      <strong>Choose CSV file</strong><br />
      <input type="file" id="csvFile" accept=".csv" />
    </div>
  </div>

  <!-- FILE INFO -->
  <div class="card">
    <h2>File Overview</h2>
    <div class="file-info">
      <div class="info-item" id="fileName">File name: —</div>
      <div class="info-item" id="rowCount">Total rows: —</div>
      <div class="info-item" id="columnCount">Columns detected: —</div>
    </div>
  </div>

  <!-- PREVIEW -->
  <div class="card">
    <h2>CSV Preview</h2>
    <div class="table-wrapper">
      <table id="previewTable"></table>
    </div>

    <div class="action">
      <button id="analyzeBtn" class="btn">Analyze CSV</button>
      <button id="downloadBtn" class="btn">Download Agents CSV</button>
    </div>
  </div>

  <!-- RESULTS -->
  <div class="card" id="resultsCard" style="display:none;">
    <h2>Results</h2>
    <p id="resultsText"></p>
  </div>

